{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "rules": {
    "new-cap": "off"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "semi": "error"
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "semi": "error"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {
        "semi": "error"
      }
    }
  ]
}

{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "rules": {
    "new-cap": "off",
    "node/no-unpublished-import": [
      "error",
      {
        "allowModules": ["@nestjs/testing"]
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "semi": "error"
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "semi": "error"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {
        "semi": "error"
      }
    }
  ]
}
